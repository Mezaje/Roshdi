  <!-- أضف أسفل سكريبت الصفحة -->
  <script>
  (function(){
    var yr=document.getElementById('year'); if(yr) yr.textContent=new Date().getFullYear();
    var t=document.getElementById('toTop');
    if(!t) return;
    function v(){ if(window.scrollY>320) t.classList.add('show'); else t.classList.remove('show'); }
    window.addEventListener('scroll',v,{passive:true});
    v();
    t.addEventListener('click',function(){ window.scrollTo({top:0,behavior:'smooth'}); });
  })();
  </script>
  