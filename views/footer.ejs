  .social-link:hover{transform:translateY(-2px)}
  .footer-bottom{border-top:1px solid rgba(0,0,0,.06);background:rgba(255,255,255,.4)}
  [data-theme="night"] .footer-bottom{background:rgba(30,24,19,.4);border-color:rgba(255,255,255,.08)}
