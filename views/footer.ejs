  .footer-links a:hover{background:var(--sand-200);border-color:rgba(0,0,0,.06)}
  [data-theme="night"] .footer-links a:hover{background:var(--sand-300)}
  .footer-form{display:grid;gap:10px;grid-template-columns:1fr auto}
  .footer-form small{grid-column:1 / -1}
